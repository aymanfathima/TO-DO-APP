<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginScreen">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/lightGray"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGray"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/vibrantPurple"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/img_userinfo"
                    android:layout_width="46dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/image1"
                    tools:srcCompat="@drawable/image1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/txt_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/vibrantPurple"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_devinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical|end"
                        app:srcCompat="@drawable/baseline_person_24"
                        tools:srcCompat="@drawable/baseline_person_24"
                        android:layout_marginRight="20dp"/>
                </LinearLayout>
            </LinearLayout>


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="213dp"
                android:layout_height="187dp"
                app:srcCompat="@drawable/image7"
                android:layout_marginLeft="75dp"
                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:text="Task List"
                android:textColor="@color/vibrantPurple"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:background="@color/lightGray"
            android:orientation="vertical"
            android:padding="20dp">

            <ListView
                android:id="@+id/todoitemlistview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="10dp"
                tools:listitem="@layout/list_item">

            </ListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|end"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/img_Add"
                android:layout_width="59dp"
                android:layout_height="65dp"
                app:srcCompat="@drawable/add"
                tools:srcCompat="@drawable/add" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>